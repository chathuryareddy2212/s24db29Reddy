extends layout

block content
  h1= title
  p welcome to #{title}
  - let item =  results
 
    div(class = "container-fluid")
        div(class="row")
            each item, index in results
                div(class="col-sm-2" onclick = `buy(${index})` )
                    ul
                        li  #{item.tree_name}
                        li  upto #{item.lifespan} years
                        li  #{item.leafcolor}
                        
        script.
            function buy(index){
                  alert('purchased item will be ' + index);
              }
