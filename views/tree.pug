extends layout

block content
  h1= title
  p welcome to #{title}
  - let item =  results
 
    div(class = "container-fluid")
        div(class="row m-1")
            each item, index in results
                - let destination = `dispatch(\"/tree/update?id=${item._id}\")`
           

                div(class="col-sm-2" )
                    ul
                        li  #{item.tree_name}
                        li  upto #{item.lifespan} years
                        li  #{item.leafcolor}
                button.btn( class="btn-primary ml-1", onclick= destination) Update        
        
        
        script.
            function dispatch(path){
                 window.location.href=path
            }
        
